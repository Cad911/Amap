<%= simple_form_for([:espace_client,@client]) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :genre %>
    <%= f.input :nom %>
    <%= f.input :email %>
    <%= f.input :prenom %>
    <%= f.input :adresse %>
    <%= f.input :ville %>
    <%= f.input :code_postal %>
    <%= f.input :pays %>
    <%= f.input :telephone %>
    <%= f.input :naissance %>
    <%= f.input :newsletter %>
    <%= f.input :point_relai_id %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
