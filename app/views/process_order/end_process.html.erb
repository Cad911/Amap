<div class="l_main_gutter l_process_order step_4"><h1> Le paiement a été accepté ! </h1>
	<h3> Voici le recap' de votre commande</h3>
	<% if !@mon_abonnement.nil? %>
		
		<div class="helper">
			<h3> Abonnement n° <%= @mon_abonnement.id %> </h3>
			<ul>
				<li  style="list-style:none"> Abonnement au panier <%= @mon_abonnement.panier.titre %> de  <%= @mon_abonnement.panier.user.prenom %> </li>
				<li  style="list-style:none"> Duree: <%= @mon_abonnement.duree %> mois (A partir d'aujourd'hui : <%= @mon_abonnement.date_debut %> )</li>
				<li  style="list-style:none"> Date de fin <%= @mon_abonnement.date_fin %> </li>
				<li  style="list-style:none"> Total = <%= @mon_abonnement.prix_ttc %></li>
			</ul>
		</div>
	
	<% else %>
		<div class="helper">
			<h3> Commande n° <%= @ma_commande_payer.id %> </h3>
			<ul>
			<% @produit_de_commande.each do |produit| %>
				<li   style="list-style:none"> <%= produit.nb_pack %> <%= produit.produit_vente_libre.titre%> </li>
			<% end %>
			<li   style="list-style:none"> Total = <%= @ma_commande_payer.total %></li>
				</ul>
		</div>
	<% end %>
</div>
