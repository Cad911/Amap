          <% if !product_cageot.produit_vente_libre.stock.default_image.nil? %>
            <%= link_to page_produit_show_path(product_cageot.produit_vente_libre.user,product_cageot.produit_vente_libre) do %>
                <%= image_tag (product_cageot.produit_vente_libre.stock.default_image).image_url(:is_small), :class => "has_corners_shadow is_small" %>
              <% end %>
          <% else %>
            <img src="<%= product_cageot.produit_vente_libre.stock.default_image %>" class="has_corners_shadow is_small"> 
          <% end %>
            <span class="nombre_pack_p_c"> <%= product_cageot.nombre_pack %> </span> 
            <span class="deleted_p_c"></span>
            <div class="plus_btn">
                  <span class="plus_quantite_p_c"></span>
              </div>
            <div class="minus_btn">
                  <span class="moins_quantite_p_c"></span>
              </div>
          </li>
        <% end %>
    <% end %>
  <% end %>      
      <!-- <li><img src="" class=has_corners_shadow is_small"></li>
      <li><img src="" class="has_corners_shadow is_small"></li>
      <li><img src="" class="has_corners_shadow is_small"></li> -->
    </ul>
    <div class="checkout">
