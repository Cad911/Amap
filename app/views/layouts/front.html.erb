      <div class="content">
          <h2 class="title">Connexion</h2>
         <%= simple_form_for([:espace_client,Client.new], :html => {:class => '', :id => 'form_sinscrire_lightbox' } ,:remote => true) do |f| %>
          <%= f.error_notification %>

          <%= f.input :email, :required => true, :autofocus => true, :wrap_with => {:tag => 'span',:class => 'help-inline'} %>
            <%= f.error :email %>
            <%= f.input :nom, :required => true, :autofocus => true %> 
            <%= f.input :password, :required => true %>
            <%= f.input :password_confirmation, :required => true %>
      </div>

      <div class="footer">
          <span class="annuler">annuler</span>
        <span class="button" id="lightbox_sign_up"><a>S'inscrire</a></span>
      </div>
        <% end %>
    </div>
    </div>
    
  </div>
