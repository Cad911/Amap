<!DOCTYPE html>
<html>
<head>
  <title>ECommerce</title>
  <!-- ___________________________ CSS __________________________________ -->
  <%= stylesheet_link_tag    "bootstrap-responsive", :media => "all" %>
  <%= stylesheet_link_tag    "bootstrap", :media => "all" %>
  <%= stylesheet_link_tag    "scaffolds", :media => "all" %>
  <%= stylesheet_link_tag    "users", :media => "all" %>
  <%= stylesheet_link_tag    "produit_vente_libres", :media => "all" %>
  <%#= stylesheet_link_tag    "main", :media => "all" %>
  <%= stylesheet_link_tag 'screen.css', :media => 'screen, projection' %>
  <%= stylesheet_link_tag 'print.css', :media => 'print' %>
  <!--[if IE]><%= stylesheet_link_tag 'ie.css', :media => 'screen, projection' %><![endif]-->
  <%= stylesheet_link_tag    "main" %>



  <%= javascript_include_tag "jquery-1.7.1.min" %>
  <%= javascript_include_tag "bootstrap" %>
  <%= javascript_include_tag 'jquery_ujs' %>
 
   <%= javascript_include_tag 'produit_vente_libres' %>
    <%= javascript_include_tag 'stocks' %>

	<%= javascript_include_tag :defaults%>
  <%= csrf_meta_tags %>
  
  <style>
  	@media (min-width:980px){
	  		body{
	  			padding-top: 60px;
	  		}
  	}
  </style>
</head>
<body>


	<div class="navbar navbar-fixed-top">
		<div class="navbar-inner">
			<div class="container">
			<a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
				<span class="icon-bar"></span>
				<span class="icon-bar"></span>
				<span class="icon-bar"></span>
			</a>
			
				
				<a href="/" class="brand"> Accueil </a>
				<div class="nav-collapse"> 
					<ul class="nav">
						<li class="dropdown"> 
							<a href="" class="dropdown-toggle" data-toggle="dropdown"> Panier <b class="caret"></b></a>
							<ul class="dropdown-menu">
								<li> <%= link_to "Tous",page_produit_index_path %> </li>
							<%	Categorie.all.each do |categorie| %>
								<li class="divider"></li>
								<li> <%= link_to categorie.nom,page_panier_index_by_categorie_path(categorie.id) %> </li>
							<% end %>
							</ul>
						</li>
						<li class="dropdown"> 
							<a href="#" class="dropdown-toggle" data-toggle="dropdown"> Produit <b class="caret"></b></a>
							<ul class="dropdown-menu">
								<li> <%= link_to "Tous",page_produit_index_path %> </li>
							<% Categorie.all.each do |categorie| %>
								<li class="divider"></li>
								<li> <%= link_to categorie.nom,page_produit_index_by_categorie_path(categorie.id) %> </li>
							<% end %>
							</ul>
						</li>
						<li class="dropdown"> 
							<a href="" class="dropdown-toggle" data-toggle="dropdown"> Agriculteur <b class="caret"></b></a>
							<ul class="dropdown-menu">
								<li><%= link_to "Tous",page_revendeur_index_path %></li>
							</ul>
						</li>
						<li class="dropdown"> 
							<a href="" class="dropdown-toggle" data-toggle="dropdown"> Notre Journal <b class="caret"></b></a>
							<ul class="dropdown-menu">
								<li> <a> Fruit et legumes </a> </li>
								<li class="divider"></li>
								<li> <a> Laitier </a> </li>
							</ul>
						</li>
						<li class="dropdown"> 
							<a href="" class="dropdown-toggle" data-toggle="dropdown"> Notre AMAP <b class="caret"></b></a>
							<ul class="dropdown-menu">
								<li> <a> Fruit et legumes </a> </li>
								<li class="divider"></li>
								<li> <a> Laitier </a> </li>
							</ul>
						</li>
						<% if !current_client.nil? %>
							<% if can? :update, Client.find(current_client.id) %>
								<li class="dropdown">
									<a href="" class="dropdown-toggle" data-toggle="dropdown"> Espace Client <b class="caret"></b></a>
									<ul class="dropdown-menu">
										<li> <%= link_to "Mes infos",espace_client_client_path(current_client.id) %> </li>
										<li class="divider"></li>
										<li> <%= link_to "Se deconnecter", client_logout_path(), :method => 'delete' %> </li>
									</ul>
								</li>
							<% end %>
						<% else %>
							<li> <%= link_to "Se connecter",new_client_session_path() %> </li>
						<% end %>
					</ul>
				</div>

				
				
			</div>
		</div>
	
	</div>
	
	
	<div class="l_wrapper">
	
		<%= yield %>
	
	</div>
</body>
</html>
