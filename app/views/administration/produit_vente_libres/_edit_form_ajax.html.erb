<%= simple_form_for([:administration, User.find(params[:user_id]),@produit_vente_libre], :remote => true, :html => {:class => 'form-horizontal well edit_produit_vente_libre' }) do |f| %>
  
  <div class="form-inputs">
  	<%= f.input :id_user_input, :as => "hidden",:input_html => { :value => params[:user_id] } %>
   	<div class="modif_formulaire">
  		<div class="alert alert-info">
  				<strong> En stock : </strong> <span id="quantite_stock"> <%= @produit_vente_libre.stock.quantite %> </span> <span id="unite_mesure_stock"> <%= @produit_vente_libre.stock.unite_mesure.abbreviation %> </span>
  		</div>
  		
  		<div class="modal-body">
	    	<%= f.input :titre, :disabled => true %>
	    	<%= f.input :description, :disabled => true, :input_html => { :rows => "10" } %>
	    	
	    	<%= f.input :quantite, :as => :integer %>
	    	<%= f.input :nombre_pack, :as => :integer %>
	    	<%= f.input :prix_unite_ht, :as => :float %>
	    	<%= f.input :prix_unite_ttc, :as => :float %>
	    </div>
	    
	    
	    <div class="form-actions modal-footer">
    		<%= f.button :submit, :class => "btn-primary envoi_form" %>
    	</div>
	    
    </div>

  </div>

<% end %>
