<%= simple_form_for([:administration, User.find(params[:user_id]),@produit_vente_libre], :html => {:class => 'form-horizontal well' }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
  	<%= f.input :id_user_input, :as => "hidden",:input_html => { :value => params[:user_id] } %>
    <%= f.input :titre, :disabled => true %>
    <%= f.input :description, :disabled => true, :input_html => { :rows => "10" } %>
    <%= f.input :quantite %>
    <%= f.input :nombre_pack %>
    <%= f.input :prix_unite_ht %>
    <%= f.input :prix_unite_ttc %>

  </div>

  <div class="form-actions">
    <%= f.button :submit, :class => 'btn btn-primary' %>
  </div>
<% end %>
