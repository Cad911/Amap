		 <div class="page-header">
		 	<h1> <%= @title_user %> </h1>
		 	<ul class="buttons">
		 		<li class="help button button_active"  title="aide"><span class="picture"></span></li>
				<li class="separator"></li>
		 		<li class="edit button" title="modifier mon profil"><span class="picture"></span></li>
		 	</ul>		 	
		 </div>

		 <div class="helper">
		 	<p class="title is_bold"><i class="icon ui-help_hover"></i>Gérer votre profil</p>
		 	<span class="close"><i class="icon-remove"></i></span>
		 	<p class="content">Modifier chaque éléments de votre profil en cliquant simplement dessus. Une boite de modification apparatitra alors.</p>
		 </div>			

		 <div class="user_profile">
		 	<div class="informations_card">
		 		<input type="hidden" class="user_id" value="<%= current_user.id %>" />
		 	</div>
		 	<%#= current_user.id %>
		 	<%#= notice %>
		 	<%#= @user.id %>
		 	<%#= @user.entite.nom %>
		 	<% if !@user.direction.nil?  %>
		 	<%#= @user.direction.nom %>				
		 	<% end %>
		 	<%#= @user.genre %>

		 	<%#= @user.nom_societe %>				
		 	<%#= @user.naissance %>

		 	<%#= @user.mode_denvoi_id %>
		 	<%#= @user.alaune %>
		 	<div class="pictures">
		 		<div class="has_corners_shadow is_medium">
		 			<% if !@user.default_image.nil? %>
		 			<span class="deleted_p_c photo_user" id="photo_user_<%= @user.default_image.id %>"></span>
<!-- 		 			<span class="modify">modifier</span> -->
		 			<%= image_tag (@user.default_image).image_url(:is_medium) if !(@user.default_image).nil? %>
		 			<% end %>
		 		</div>

		 		<ul>
		 			<% if !@user.other_image.nil? %>
						<% i = 0 %>
						<% @user.other_image.each do |image| %>
							<li><div class="is_small has_corners_shadow"><span class="deleted_p_c photo_user" id="photo_user_<%= image.id %>"></span><%= image_tag image.image_url(:is_small)%></div></li>
		 				<% end %>
		 			<% end %>
		 			<li><span class="add button image add_user_image" id="user_id_<%= @user.id %>" title="Ajouter une image"><span class="picture"></span></span></li>
		 		</ul>

		 	</div>
		 	<div class="content">
		 		<p class="title"><%= @user.prenom %>&nbsp;<%= @user.nom %></p>
		 		<p class="is_note is_italic note city"><%= (@user.ville_id.nil? || @user.ville_id == '') ? 'Aucune ville' :  @user.ville.cp %> <%= @user.ville.nom %></p>
		 		<p class="is_note is_italic note address"> <%= (@user.adresse.nil? || @user.adresse == '') ? 'Aucune adresse' : @user.adresse  %></p>
		 		<p class="description"> <%=(@user.description.nil? || @user.description == '') ? 'Aucune description' : @user.description  %></p>
		 		<p class="phone"><%= (@user.telephone.nil? || @user.telephone == '') ? 'Aucun numéro' : @user.telephone  %></p>
		 		<p class="email"><%= (@user.email.nil? || @user.email == '') ? 'Aucune adresse mail' : @user.email %></p>
		 	</div>
		 	<div class="clear"></div>




		 	<%#= link_to 'Modifier', edit_administration_user_path(@user), :class => "btn" %> 
		 	<%#= link_to 'Retour', administration_users_path,:class => "btn btn-inverse" %>


