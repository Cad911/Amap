<div class="page-header">
   	<h1>Listing stocks</h1>
    <ul class="buttons">
        <li class="stats button"><span class="picture"></span></li>
        <li class="add button"><span class="picture"></span></li>
        <li class="group_button">
            <div class="cards button"><span class="picture"></span></div>
            <div class="tables button"><span class="picture"></span></div>
        </li>
    </ul>
</div>

<div class="table">
    <table class="">
      <tr>
    <!--     <th>Id</th>
     --><!--     <th>User</th> -->
        <th>Titre</th>
        <!-- <th>Categorie</th> -->
        <th> Mis en Rayon</th>
        <th>Description</th>
        <!-- <th>Deleted</th> -->
        <th></th>
        <th></th>
        <th></th>
      </tr>
    
    <% @stocks.each do |stock| %>
      <tr>
    <!--     <td><%= stock.id %></td>
     --><!--     <td><%= stock.user_id %></td>
     -->
        <td><%= stock.titre %> <span class="type is_italic">(<%= stock.unite_mesure.abbreviation %>)</span></td>
    <!--     <td><%= stock.categorie_id %></td> -->
        <td> <%= stock.quantiteProduitVente.to_int %> / <%= stock.quantite.to_int %> </td>
        <td><%= stock.description %></td>
        <!-- <td><%= stock.deleted %></td> -->
        <td class="action">
          <ul class="buttons_card">
            <li class="historique button"><span class="picture"></span></li>
            <li class="edit button"><span class="picture"></span></li>
            <li class="delete button"><span class="picture"></span></li>
          </ul>          
        </td>
        <td><%= link_to 'Plus d\'info', administration_user_stock_path(params[:user_id],stock) %></td>
        <td><%= link_to 'Modifier', edit_administration_user_stock_path(params[:user_id],stock) %></td>
        <td><%= link_to 'Supprimer', administration_user_stock_path(params[:user_id],stock), confirm: 'Are you sure?', method: :delete %></td>
      </tr>
    <% end %>
    </table>
</div>

<br />

<%= link_to 'Nouveau Stock', new_administration_user_stock_path %>


<ul>
    <% @stocks.each do |stock| %>
		<li class="card fade in">
			<div class="left_area">
				<div class="is_small has_corners_shadow"></div>
				<div class="picture first_cloumn"></div> 
				<div class="picture"></div>
				<div class="picture first_cloumn"></div>
				<div class="picture"></div>
			</div>
			<div class="right_area">
				<div class="header">
					<h2 class="title"><%= stock.titre %></h2>
					<ul class="buttons_card">
				        <li class="historique button"><span class="picture"></span></li>
				        <li class="edit button"><span class="picture"></span></li>
			            <li class="delete button"><span class="picture"></span></li>
					</ul>
				</div>
				<p class="description"><%= stock.description %></p>
				<div class="footer">
					<ul>
						<li class="details">
							<span class="label">Prix:</span>
							<span class="value"> 
							<%= 
								if stock.produit_vente_libre 
									if (stock.produit_vente_libre.prix_unite_ttc).to_int == (stock.produit_vente_libre.prix_unite_ttc)
									    ((stock.produit_vente_libre.prix_unite_ttc).to_int).to_s+'€' 
									else
									    ((stock.produit_vente_libre.prix_unite_ttc)).to_s+'€'
									end
								else 
									'Aucun prix defini' 
								end 
							%> 
							</span>
						</li>
						<li class="details">
							<span class="label">Unité:</span>
							<span class="value"> 
								<%= stock.unite_mesure.nom %> 
							</span>
						</li>
						<li class="details">
							<span class="label">Vendu par lots:</span>
							<span class="value">
								<% if stock.produit_vente_libre %>
										<%= (stock.produit_vente_libre.quantite).to_int %> <span class="is_italic">( <%= stock.unite_mesure.nom %>)</span> 
								<%	else %>
										Aucun lot en vente actuellement
								<%	end %>
							</span>
						</li>
						<li class="details">
							<span class="label">Lots mis en Rayon:</span>
							<span class="value"> 
								<% if stock.produit_vente_libre %>
										<%= (stock.produit_vente_libre.nombre_pack) %> sur <%= (stock.produit_vente_libre.lotPossibleMax) %> (possible)</span> 
								<%	else %>
										Aucun lot en vente actuellement
								<%	end %>
						</li>
						<li class="details">
							<span class="label">Stock total:</span>
							<span class="value"> <%= (stock.quantite).to_int %> <span class="is_italic">(<%= stock.unite_mesure.nom %>)</span></span>
						</li>
					</ul>
				</div>
			</div>
			<div class="clear"></div>
		</li>
	<% end %>
</ul>





