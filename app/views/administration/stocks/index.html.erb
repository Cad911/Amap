<div class="page-header">
   	<h1>Listing stocks</h1>
    <ul class="buttons">
        <li class="cards button"><span></span></li>
        <li class="tables button"><span></span></li>
        <li class="stats button"><span></span></li>
        <li class="add button"><span></span></li>
    </ul>
</div>

<table class="table table-striped">
  <tr>
    <th>Id</th>
    <th>User</th>
    <th>Categorie</th>
    <th>Unite mesure</th>
    <th> Mis en Rayon</th>
    <th>Titre</th>
    <th>Description</th>
    <th>Deleted</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @stocks.each do |stock| %>
  <tr>
    <td><%= stock.id %></td>
    <td><%= stock.user_id %></td>
    <td><%= stock.categorie_id %></td>
    <td><%= stock.unite_mesure.abbreviation %></td>
    <td> <%= stock.quantiteProduitVente %> / <%= stock.quantite %> </td>
    <td><%= stock.titre %></td>
    <td><%= stock.description %></td>
    <td><%= stock.deleted %></td>
    <td><%= link_to 'Plus d\'info', administration_user_stock_path(params[:user_id],stock) %></td>
    <td><%= link_to 'Modifier', edit_administration_user_stock_path(params[:user_id],stock) %></td>
    <td><%= link_to 'Supprimer', administration_user_stock_path(params[:user_id],stock), confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'Nouveau Stock', new_administration_user_stock_path %>
